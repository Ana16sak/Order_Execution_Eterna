{
  "name": "order-exec-engine",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "start:test": "NODE_ENV=test node dist/server.js",
    "test:integration": "npm run start:test & sleep 3 && jest --runInBand redis.integration.test.ts",
    "lint": "eslint 'src/**/*.{ts,tsx,js}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,md}'",
    "prepare": "husky",
    "test": "cross-env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@fastify/websocket": "^11.2.0",
    "bullmq": "^5.64.1",
    "fastify": "^5.6.2",
    "ioredis": "^5.8.2",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.6",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "supertest": "^6.3.4",
    "testcontainers": "^9.12.0",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  }
}
